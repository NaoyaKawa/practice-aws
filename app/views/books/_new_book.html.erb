<h2 class"mt-3">New book</h2>
<%= form_with model: Book.new, local:true do |f| %>
<div class="form-group">
  <lable for="book_title">Title</label>
  <%= f.text_field :title %>
</div>
<div class="form-group">
  <lable for="book_opinion">Opinion</label>
  <%= f.text_area :body %>
</div>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>