<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
<%= render 'users/user_info', user: @user %>
<%= render 'books/new_book', book: @book %>
</div>
<div class="col-md-8 offset-md-1">
  <h2>MyBooks</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
        
          <td>
            <%= link_to (book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td>
           <%= link_to book.title, book, class: "book_#{book.id}" %>
          </td>
          <td>
           <%= book.body %>
          </td>
          
        </tr>
      </tbody>
      <% end %>
    </table>
</div>
</div>